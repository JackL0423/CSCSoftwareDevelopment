# Line endings normalization
* text=auto eol=lf

# Binary files in docs/evidence tracked via Git LFS
docs/evidence/*.png filter=lfs diff=lfs merge=lfs -text
docs/evidence/*.jpg filter=lfs diff=lfs merge=lfs -text
docs/evidence/*.jpeg filter=lfs diff=lfs merge=lfs -text
docs/evidence/*.har filter=lfs diff=lfs merge=lfs -text
docs/evidence/*.mp4 filter=lfs diff=lfs merge=lfs -text
docs/evidence/*.webm filter=lfs diff=lfs merge=lfs -text

# All HAR files (network captures)
*.har filter=lfs diff=lfs merge=lfs -text

# Large image files anywhere
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text

# Video files
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.webm filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
